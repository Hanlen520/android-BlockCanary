<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Switch
            style="@style/moduleSwitch"
            android:text="通知栏提示"
            android:textOn="通知栏提示已经开启"
            android:textOff="通知栏提示已经关闭"
            android:id="@+id/notificationSwitch"/>

        <Switch
            style="@style/moduleSwitch"
            android:text="toast提示卡顿报告文件保存路径"
            android:textOn="toast提示卡顿报告文件保存路径已经开启"
            android:textOff="toast提示卡顿报告文件保存路径已经关闭"
            android:id="@+id/toastFileSavePathSwitch"/>

        <Switch
            style="@style/moduleSwitch"
            android:text="每次初始化都删除所有卡顿报告文件"
            android:textOn="每次初始化都删除所有卡顿报告文件已经开启"
            android:textOff="每次初始化都删除所有卡顿报告文件已经关闭"
            android:id="@+id/deleteFilesLaunchSwitch"/>

        <Switch
            style="@style/moduleSwitch"
            android:text="monkey测试"
            android:textOn="monkey测试已经开启"
            android:textOff="monkey测试已经关闭"
            android:id="@+id/monkeyTestSwitch"/>

    </LinearLayout>
</ScrollView>

